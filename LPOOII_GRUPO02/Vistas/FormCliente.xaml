                </Button>
                <TextBlock FontFamily="Calibri" FontSize="12" FontWeight="Medium" Foreground="DarkGray" Margin="38,122,195,135" Text="Nombre:" Grid.Row="1" />
                <TextBox BorderBrush="DarkGray" BorderThickness="0,0,0,2" CaretBrush="LightGray" FontFamily="Montserrat" FontSize="13" FontWeight="Medium" Foreground="White" Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="38,152,0,0" Name="txtNombre" Padding="20,0,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="141">
                    <TextBox.Background>
                        <ImageBrush />
                    </TextBox.Background>
                </TextBox>
                <TextBlock FontFamily="Calibri" FontSize="12" FontWeight="Medium" Foreground="DarkGray" Margin="200,122,33,136" Text="Teléfono:" Grid.Row="1" />
                <TextBox BorderBrush="DarkGray" BorderThickness="0,0,0,2" CaretBrush="LightGray" FontFamily="Montserrat" FontSize="13" FontWeight="Medium" Foreground="White" Grid.Row="1" Height="28" Margin="200,152,33,0" Name="txtTelefono" Padding="20,0,0,0" VerticalAlignment="Top" VerticalContentAlignment="Center">
                    <TextBox.Background>
